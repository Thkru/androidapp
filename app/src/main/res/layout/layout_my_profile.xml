<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space"
        android:id="@+id/tvUsername"
        android:layout_toEndOf="@+id/textView4"
        android:textSize="18sp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvEmail"
        android:layout_below="@+id/tvUsername"
        android:layout_toEndOf="@+id/textView5"
        android:textSize="18sp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvSize"
        android:layout_below="@+id/tvEmail"
        android:layout_toEndOf="@+id/textView6"
        android:textSize="18sp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvWeight"
        android:layout_below="@+id/tvSize"
        android:layout_toEndOf="@+id/textView7"
        android:textSize="18sp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvGender"
        android:layout_below="@+id/tvWeight"
        android:layout_toEndOf="@+id/textView9"
        android:textSize="18sp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvExperience"
        android:layout_below="@+id/tvGender"
        android:layout_toEndOf="@+id/textView8"
        android:textSize="18sp" />

    <Button
        android:text="Bearbeiten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAim"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnEditProfile" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400px"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imgProfilePic"
        android:scaleType="fitCenter"

        android:layout_alignParentStart="true" />

    <TextView
        android:text="Größe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5"
        android:layout_toStartOf="@+id/tvSize"
        android:textSize="18sp" />

    <TextView
        android:text="E-Mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/tvEmail"
        android:layout_alignBottom="@+id/tvEmail"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tvEmail"
        android:textSize="18sp" />

    <TextView
        android:text="Gewicht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvGender"
        android:layout_alignParentStart="true"
        android:id="@+id/textView6"
        android:layout_toStartOf="@+id/tvWeight"
        android:textSize="18sp" />

    <TextView
        android:text="Geschlecht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:id="@+id/textView7"
        android:layout_toStartOf="@+id/tvGender"
        android:textSize="18sp" />

    <TextView
        android:text="Trainingserfahrung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:id="@+id/textView9"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        android:paddingRight="4dp" />

    <TextView
        android:text="Trainingsziel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView9"
        android:textSize="18sp" />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvAim"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:textSize="18sp"
        android:layout_toEndOf="@+id/textView9" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_below="@+id/imgProfilePic"
        android:layout_alignParentStart="true"
        android:id="@+id/space"/>

    <TextView
        android:text="Benutzername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="18sp"
        android:layout_below="@+id/space"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tvUsername" />

</RelativeLayout>